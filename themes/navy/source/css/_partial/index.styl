#banner-outer
  background-image: url("/images/banner.jpg")

#banner
  color: rgba(255, 255, 255, 0.8)
  text-align: center

#banner-title
  padding: 20px 160px 0 160px;
  color:#fff;
  font-size: 40px
  line-height: 1.15
  font-weight: 600
  text-align:left
  font-family: font-title
  @media mq-normal
    padding-top: 100px
    padding-bottom: 80px
    font-size: 50px

#banner-share
  display: none
  text-align:left
  padding: 0 0 80px 160px
  @media mq-normal
    display: block

#intro-feature-list
  padding-top: 20px
  display: flex
  flex-flow: column
  margin-bottom: 25px
  @media mq-normal
    flex-flow: row wrap
    margin-bottom: 50px

.intro-feature-wrap
  padding-top: 20px
  @media mq-normal
    flex: 0 0 50%
    padding-top: 50px

.intro-feature
  position: relative
  text-align: center
  @media mq-normal
    text-align: left
    padding-left: 70px

.intro-feature-icon
  color: color-default
  font-size: 36px
  padding-bottom: 26px
  text-align: center
  @media mq-normal
    position: absolute
    top: 0
    left: 20px
    font-size: 24px
    width: @font-size

.intro-feature-title
  font-family: font-title
  font-size: 24px

.intro-feature-title a
  color: color-default
  text-decoration: none

.intro-feature-desc
  margin: line-height 0
  line-height: line-height

#intro-get-started-wrap
  text-align: center

#intro-get-started-link
  font-size: 18px
  font-family: font-title
  display: inline-block
  color: color-default
  text-decoration: none
  margin: 40px 0
  border: 3px solid
  border-color: lighten(color-default, 15%)
  padding: 12px 24px
  position: relative
  transition: 0.2s
  &:hover
    background: @border-color
    color: #fff